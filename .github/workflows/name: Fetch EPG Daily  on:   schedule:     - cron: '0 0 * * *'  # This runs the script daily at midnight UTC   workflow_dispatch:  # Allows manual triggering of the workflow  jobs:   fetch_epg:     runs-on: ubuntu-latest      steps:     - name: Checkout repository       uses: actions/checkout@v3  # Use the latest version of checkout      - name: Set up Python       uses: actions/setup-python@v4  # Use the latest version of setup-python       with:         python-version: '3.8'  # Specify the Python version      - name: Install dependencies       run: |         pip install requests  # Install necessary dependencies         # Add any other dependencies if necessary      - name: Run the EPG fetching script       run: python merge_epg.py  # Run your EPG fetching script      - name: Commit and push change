name: Fetch EPG Daily

on:
  schedule:
    - cron: '0 0 * * *'  # This runs the script daily at midnight UTC
  workflow_dispatch:  # Allows manual triggering of the workflow

jobs:
  fetch_epg:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3  # Use the latest version of checkout

    - name: Set up Python
      uses: actions/setup-python@v4  # Use the latest version of setup-python
      with:
        python-version: '3.8'  # Specify the Python version

    - name: Install dependencies
      run: |
        pip install requests  # Install necessary dependencies
        # Add any other dependencies if necessary

    - name: Run the EPG fetching script
      run: python merge_epg.py  # Run your EPG fetching script

    - name: Commit and push change
